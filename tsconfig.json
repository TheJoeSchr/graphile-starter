{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "noEmitOnError": true,

    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "removeComments": false,
    "strict": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "suppressImplicitAnyIndexErrors": true,
    "preserveWatchOutput": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false,

    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["@app/*"],
      "~/*": ["./@app/server/src/nuxt/*"] // for Vetur
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue",
    "./src/**/*.js",
    "./src/**/*.json"
  ],
  "exclude": ["@app/e2e", "@app/server"],
  "references": [
    { "path": "@app/config" },
    { "path": "@app/graphql" },
    { "path": "@app/worker" }
  ]
}
